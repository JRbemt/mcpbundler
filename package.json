{
  "name": "@jrbemt/mcpbundler",
  "version": "0.1.1",
  "description": "MCP Bundler - Aggregate multiple MCP servers into one",
  "license": "MIT",
  "author": "JoaquÃ­n van den Bemt",
  "homepage": "https://github.com/jrbemt/mcpbundler",
  "bugs": "https://github.com/jrbemt/mcpbundler/issues",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "mcpbundler": "dist/src/cli/index.js"
  },
  "files": [
    "dist/src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jrbemt/mcpbundler.git"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "npm run db:sqlite:deploy && concurrently --prefix none \"npm run watch\" \"dotenv -e .env.dev -- nodemon --watch dist --exec node dist/src/main.js\"",
    "cli": "npm run build --silent && node dist/src/cli/index.js",
    "start": "npm run build --silent && node dist/src/main.js",
    "build": "shx rm -rf dist && tsc && shx chmod +x dist/**/*.js",
    "watch": "tsc --watch",
    "test": "npm run build && vitest run",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:watch": "vitest --config vitest.unit.config.ts",
    "db:sqlite:deploy": "dotenv -e .env.dev -- prisma db push --accept-data-loss --schema=./prisma/sqlite/schema.prisma",
    "db:sqlite:migrate": "dotenv -e .env.dev -- prisma migrate dev --schema=./prisma/sqlite/schema.prisma",
    "db:postgres:migrate": "dotenv -e .env -- prisma migrate dev --schema=./prisma/postgres/schema.prisma",
    "db:postgres:deploy": "dotenv -e .env -- prisma migrate deploy --schema=./prisma/postgres/schema.prisma",
    "db:sqlite:studio": "dotenv -e .env.dev -- prisma studio --schema=./prisma/sqlite/schema.prisma",
    "db:postgres:studio": "dotenv -e .env -- prisma studio --schema=./prisma/postgres/schema.prisma"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@prisma/client": "^6.19.0",
    "axios": "^1.12.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "lru-cache": "^11.2.2",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.18.0",
    "prom-client": "^15.1.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/node": "^24",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-istanbul": "^4.0.5",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "msw": "^2.4.9",
    "nodemon": "^3.1.10",
    "shx": "^0.4.0",
    "typescript": "^5.9.2"
  }
}