{
  "name": "mcpbundler",
  "version": "0.1.0",
  "description": "MCP Bundler - Aggregate multiple MCP servers into one",
  "license": "MIT",
  "author": "Joaqu√≠n van den Bemt",
  "homepage": "https://github.com/jrbemt/mcpbundler",
  "bugs": "https://github.com/jrbemt/mcpbundler/issues",
  "type": "module",
  "bin": {
    "mcpbundler": "dist/src/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npm run db:sqlite:deploy && concurrently --prefix none \"npm run watch\" \"nodemon --watch dist --exec node dist/src/main.js\"",
    "cli": "npm run build --silent && node dist/src/cli/index.js",
    "start": "npm run build --silent && node dist/src/main.js",
    "build": "tsc && shx chmod +x dist/**/*.js && npx copyfiles \"prisma/**/*\" \"dist/\"",
    "watch": "tsc --watch",
    "test": "npm run build && vitest run",
    "db:sqlite:deploy": "dotenv -e .env -- prisma db push --skip-generate --accept-data-loss --schema=./prisma/sqlite/schema.prisma",
    "db:sqlite:migrate": "dotenv -e .env -- prisma migrate dev --schema=./prisma/sqlite/schema.prisma",
    "db:postgres:migrate": "dotenv -e .env -- prisma migrate dev --schema=./prisma/postgres/schema.prisma",
    "db:sqlite:studio": "dotenv -e .env -- prisma studio --schema=./prisma/sqlite/schema.prisma",
    "db:postgres:studio": "dotenv -e .env -- prisma studio --schema=./prisma/postgres/schema.prisma"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@prisma/client": "^6.19.0",
    "axios": "^1.12.2",
    "commander": "^14.0.2",
    "diff": "^8.0.2",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "glob": "^11.0.3",
    "lru-cache": "^11.2.2",
    "minimatch": "^10.0.3",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.18.0",
    "prom-client": "^15.1.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/diff": "^8.0.0",
    "@types/express": "^5.0.5",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^24",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-istanbul": "^4.0.5",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "msw": "^2.4.9",
    "nodemon": "^3.1.10",
    "shx": "^0.4.0",
    "typescript": "^5.9.2"
  }
}