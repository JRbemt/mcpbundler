{
  "name": "mcpbundler",
  "version": "0.7.0",
  "description": "MCP Bundler - Aggregate multiple MCP servers into one",
  "license": "MIT",
  "author": "Anthropic, PBC (https://anthropic.com)",
  "homepage": "https://github.com/yourusername/mcpbundler",
  "bugs": "https://github.com/yourusername/mcpbundler/issues",
  "type": "module",
  "bin": {
    "mcpbundler": "dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npm run db:deploy:sqlite && concurrently --prefix none \"npm run watch\" \"nodemon --watch dist --exec node dist/src/main.js\"",
    "cli": "npm run build && node dist/src/cli/index.js",
    "start": "npm run build && npm run db:deploy:sqlite && node dist/src/main.js",
    "build": "tsc && shx chmod +x dist/**/*.js && npx copyfiles \"prisma/**/*\" \"dist/\"",
    "watch": "tsc --watch",
    "test": "npm run build && vitest run",
    "test:watch": "npm run build && vitest",
    "test:integration": "npm run build && vitest run --config vitest.integration.config.ts",
    "test:unit": "npm run build && vitest run --config vitest.unit.config.ts",
    "test:coverage": "npm run build && vitest run --coverage",
    "db:deploy:sqlite": "dotenv -e .env -- prisma db push --skip-generate --accept-data-loss --schema=./prisma/sqlite/schema.prisma",
    "db:migrate:sqlite": "dotenv -e .env -- prisma migrate dev --schema=./prisma/sqlite/schema.prisma",
    "db:migrate:postgres": "dotenv -e .env -- prisma migrate dev --schema=./prisma/postgres/schema.prisma",
    "db:studio:sqlite": "dotenv -e .env -- prisma studio --schema=./prisma/sqlite/schema.prisma",
    "db:studio:postgres": "dotenv -e .env -- prisma studio --schema=./prisma/postgres/schema.prisma"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.64.1",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@prisma/client": "^6.18.0",
    "axios": "^1.12.2",
    "commander": "^14.0.2",
    "diff": "^8.0.2",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "glob": "^11.0.3",
    "lru-cache": "^11.2.2",
    "minimatch": "^10.0.3",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "pm2": "^6.0.13",
    "prisma": "^6.18.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/diff": "^8.0.0",
    "@types/express": "^5.0.5",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^24",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-istanbul": "^4.0.5",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "msw": "^2.4.9",
    "nodemon": "^3.1.10",
    "shx": "^0.4.0",
    "supertest": "^7.0.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.5"
  }
}