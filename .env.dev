# Local development with SQLite
# Path is relative to prisma/sqlite/ directory where schema.prisma is located
DATABASE_URL="file:./data/dev.db"

# Server configuration
PORT=3997
NODE_ENV=development
ENCRYPTION_KEY=test-encryption-key-change-in-production
SELF_SERVICE_ENABLED=false
SELF_SERVICE_DEFAULT_PERMISSIONS=ADD_MCP, LIST_USERS

ROOT_USER_NAME=Root Administrator
ROOT_USER_EMAIL=admin@example.com

# Docker Postgres configuration (used by docker-compose.yml)
POSTGRES_USER=mcpbundler
POSTGRES_PASSWORD=changethis
POSTGRES_DB=mcp-db

RESOLVER_WILDCARD_ALLOW=true
RESOLVER_WILDCARD_TOKEN=*